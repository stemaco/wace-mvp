# Copy this file to .env.local and fill in the values

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=vercel_blob_your_token_here

# Email Service - Resend
RESEND_API_KEY=re_your_resend_api_key_here

# JWT Secrets - Generate secure random strings for production
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_change_this_in_production

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=WACE

# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=WACE Team

# Security Configuration
OTP_EXPIRY_MINUTES=5
MAX_LOGIN_ATTEMPTS=5
SESSION_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=7

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Development/Production Mode
NODE_ENV=development